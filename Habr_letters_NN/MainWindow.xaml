<Window x:Class="Habr_letters_NN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Habr_letters_NN"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="StudyPath" HorizontalAlignment="Left" Height="23" Margin="33,30,0,0" TextWrapping="Wrap" Text="Study path" VerticalAlignment="Top" Width="224"/>
        <Button Content="Study" HorizontalAlignment="Left" Margin="363,30,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="24"/>
        <TextBox x:Name="StudyValue" HorizontalAlignment="Left" Height="23" Margin="33,64,0,0" TextWrapping="Wrap" Text="Study value" VerticalAlignment="Top" Width="224" MaxLength="1"/>

    </Grid>
</Window>
