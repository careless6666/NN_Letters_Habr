        <TextBox x:Name="ReconitionFile" Height="45" Margin="24,156,195,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label Content="Select Letter file for recognizion" HorizontalAlignment="Left" Margin="24,125,0,0" VerticalAlignment="Top"/>
        <Button Content="Get Result" HorizontalAlignment="Left" Margin="432,156,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="Button_Click_3"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="352,156,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="Button_Click_2"/>

    </Grid>
</Window>
